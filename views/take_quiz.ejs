<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Take Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8fafc; font-family: 'Poppins', sans-serif; }
    .sidebar { background-color: #4338ca; color: white; height: 100vh; padding: 20px; position: fixed; width: 200px; overflow-y: auto; }
    .main { margin-left: 220px; padding: 30px; }
    .question-card { background: white; padding: 20px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
    .sidebar button { width: 100%; margin-bottom: 10px; border: none; border-radius: 8px; padding: 10px; }
    .active-q { background-color: #6366f1; color: white; }
  </style>
</head>
<body>
  <div class="sidebar">
    <h5 class="mb-3">Questions</h5>
    <% questions.forEach((q, index) => { %>
      <button type="button" class="btn btn-light question-btn" onclick="showQuestion(<%= index %>)">
        Q<%= index + 1 %>
      </button>
    <% }) %>
    <button class="btn btn-success mt-3" onclick="submitQuiz()">Submit Quiz</button>
  </div>

  <div class="main">
    <% /* questions is the array you passed from GET /take_quiz */ %>
<form id="quizForm" action="/submit_quiz/<%= quizId %>/<%= userId %>" method="POST">
  <% questions.forEach((q, index) => { %>
    <div class="question-card question" id="q<%= index %>" style="<%= index === 0 ? '' : 'display:none' %>">
      <h5>Question <%= index + 1 %>:</h5>
      <p><%= q.question_text %></p>

      <!-- IMPORTANT: name is the actual question_id -->
      <div class="form-check">
        <input type="radio" id="q_<%= q.question_id %>_A" name="<%= q.question_id %>" value="A" class="form-check-input">
        <label for="q_<%= q.question_id %>_A" class="form-check-label">A) <%= q.optionA %></label>
      </div>
      <div class="form-check">
        <input type="radio" id="q_<%= q.question_id %>_B" name="<%= q.question_id %>" value="B" class="form-check-input">
        <label for="q_<%= q.question_id %>_B" class="form-check-label">B) <%= q.optionB %></label>
      </div>
      <div class="form-check">
        <input type="radio" id="q_<%= q.question_id %>_C" name="<%= q.question_id %>" value="C" class="form-check-input">
        <label for="q_<%= q.question_id %>_C" class="form-check-label">C) <%= q.optionC %></label>
      </div>
      <div class="form-check">
        <input type="radio" id="q_<%= q.question_id %>_D" name="<%= q.question_id %>" value="D" class="form-check-input">
        <label for="q_<%= q.question_id %>_D" class="form-check-label">D) <%= q.optionD %></label>
      </div>

      <div class="mt-3 d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" onclick="prevQuestion(<%= index %>)" <%= index === 0 ? 'disabled' : '' %>>Previous</button>
        <button type="button" class="btn btn-primary" onclick="nextQuestion(<%= index %>)" <%= index === questions.length - 1 ? 'disabled' : '' %>>Next</button>
      </div>
    </div>
  <% }) %>

  <!-- final submit -->
  <div class="mt-4 text-center">
    <button type="submit" class="btn btn-success">Submit Quiz</button>
  </div>
</form>

  </div>

  <script>
    let currentQuestion = 0;
    const totalQuestions = <%= questions.length %>;

    function showQuestion(index) {
      document.querySelectorAll('.question').forEach((q, i) => {
        q.style.display = i === index ? 'block' : 'none';
      });
      currentQuestion = index;
    }

    function nextQuestion(i) {
      if (i < totalQuestions - 1) showQuestion(i + 1);
    }

    function prevQuestion(i) {
      if (i > 0) showQuestion(i - 1);
    }

    function submitQuiz() {
      if (confirm("Are you sure you want to submit the quiz?")) {
        document.getElementById("quizForm").submit();
      }
    }
  </script>
</body>
</html>
